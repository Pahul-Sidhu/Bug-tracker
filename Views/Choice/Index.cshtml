@{
    ViewBag.Title = "Role Selection";

}

<div class="container">
    <h4 style="text-align: center;">@ViewBag.Login_type</h4>

    <form method="post" action="Index" id="roleSelectionForm">
    <input type="hidden" name="email" value="@ViewBag.Email" />
        <div class="d-flex flex-row justify-content-center align-items-center">
            <div class="d-flex flex-column m-2 p-4 text-center icon">
                <label>
                    <img src="/images/user.png" alt="Admin Image" class="img-fluid rounded-circle" style="max-width: 100px;">
                    <div class="mt-3">Admin</div>
                    <input type="radio" name="selectedRole" value="Admin">
                </label>
            </div>

            <div class="d-flex flex-column m-2 p-4 text-center icon">
                <label>
                    <img src="/images/user-2.png" alt="Project Manager Image" class="img-fluid rounded-circle" style="max-width: 100px;">
                    <div class="mt-3">Manager</div>
                    <input type="radio" name="selectedRole" value="Manager">
                </label>
            </div>
        </div>

        <div class="d-flex flex-row justify-content-center align-items-center">
            <div class="d-flex flex-column m-2 p-4 text-center icon">
                <label>
                    <img src="/images/user-3.png" alt="Developer Image" class="img-fluid rounded-circle" style="max-width: 100px;">
                    <div class="mt-3">Developer</div>
                    <input type="radio" name="selectedRole" value="Developer">
                </label>
            </div>

            <div class="d-flex flex-column m-2 p-4 text-center icon">
                <label>
                    <img src="/images/user.png" alt="Submitter Image" class="img-fluid rounded-circle" style="max-width: 100px;">
                    <div class="mt-3">Submitter</div>
                    <input type="radio" name="selectedRole" value="Submitter">
                </label>
            </div>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-dark">Select Role</button>
        </div>
    </form>
</div>


<link rel="stylesheet" href="/css/choice.css">