@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="page-content">
    <div class="form-v4-content">
        <div class="form-left">
            <h2>Bug tracker</h2>
            <p class="text-1">Platform designed to manage and track the progress of software issues, bugs, and
                enhancements.</p>
            <p class="text-2">A centralized system for development teams to collaborate, communicate, and prioritize
                tasks.</p>
            <div class="form-left-last">
                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="account">Have An Account</a>
            </div>
        </div>
        <form class="form-detail" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>REGISTER FORM</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-row">
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
                <input asp-for="Input.Email" class="form-control input-text" autocomplete="username"
                    aria-required="true" placeholder="name@example.com" />
            </div>
            <div class="form-group">
                <div class="form-row form-row-1 ">
                    <label asp-for="Input.Password">Password</label>
                    <input asp-for="Input.Password" class="form-control input-text" autocomplete="new-password"
                        aria-required="true" placeholder="********" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-row form-row-1">
                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control input-text" autocomplete="new-password"
                        aria-required="true" placeholder="********" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row-last">
                <input type="submit" name="register" class="register" value="Register" id="registerSubmit">
            </div>
        </form>
    </div>
</div>
<link rel="stylesheet" href="~/css/auth.css" />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
